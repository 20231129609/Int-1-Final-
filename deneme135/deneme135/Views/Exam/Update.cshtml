@model deneme135.Models.Exam

@{
    ViewData["Title"] = "Sınav Güncelleme";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Update">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Sınav Adı</label>
                            <input asp-for="Title" class="form-control" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Sınav Açıklaması</label>
                            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Date" class="form-label">Sınav Tarihi</label>
                            <input asp-for="Date" class="form-control" type="datetime-local" required />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary ms-2">
                                <i class="fas fa-arrow-left me-2"></i>Geri
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Form validasyonu için
            $("form").validate();
        });
    </script>
}
