@model List<deneme135.Models.Exam>

<h2>Admin Paneli - Sınavlar</h2>

<a asp-action="Create" asp-controller="Exam" class="btn btn-primary btn-sm mb-3">Yeni Sınav Ekle</a>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-warning col-md-4 mb-2">Henüz Sınav Eklenmedi!</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exam in Model)
            {
                <tr>
                    <td>@exam.Id</td>
                    <td>@exam.Title</td>
                    <td>@exam.Description</td>
                    <td>@exam.Date.ToShortDateString()</td>
                    <td>
                        <a asp-action="Update" asp-controller="Exam" asp-route-id="@exam.Id" class="btn btn-primary btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-controller="Exam" asp-route-id="@exam.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
